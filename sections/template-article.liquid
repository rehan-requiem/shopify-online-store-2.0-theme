<article>
  {% for block in section.blocks %}

    {% case block.settings.content_alignment %}
      {% when 'left' %}
        {% assign content-alignment = 'left' %}
        {% assign justify-alignment = 'start' %}
      {% when 'right' %}
        {% assign content-alignment = 'right' %}
        {% assign justify-alignment = 'end' %}
      {% when 'center' %}
        {% assign content-alignment = 'center' %}
        {% assign justify-alignment = 'center' %}
    {% endcase %}


    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex px-4 items-center justify-{{ justify-alignment }}">
          <div class="max-w-7xl text-{{ content-alignment }}">
            {% if block.settings.show_blog_name %}
              <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            {% endif %}
            <h1 class="text-4xl md:text-6xl font-medium mt-1">{{ article.title }}</h1>
          </div>
        </div>


      {% when 'article_author' %}
        <div class="flex px-4 items-center justify-{{ justify-alignment }}">
          <div class="max-w-7xl text-{{ content-alignment }}">
            <small>{{ article.author }}</small>
          </div>
        </div>


      {% when 'article_published_at' %}
        <div class="flex px-4 items-center justify-{{ justify-alignment }}">
          <div class="max-w-7xl text-{{ content-alignment }}">
            <time datetime="{{ article.published_at |  date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
          </div>
        </div>


      {% when 'featured_image' %}
        <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden flex justify-{{ justify-alignment }}">
          {% if article.image != blank %}
            <img
              src="{{ article.image |  image_url}}"
              class="w-full h-80 md:h-96 object-cover object-centter"
              alt="{{article.image.alt}}"
              loading="lazy">

          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-centter p-5' }}
          {% endif %}

        </div>


      {% when 'article_content' %}
        <div class="flex px-4 items-center justify-{{ justify-alignment }}">
          <div class="max-w-7xl text-{{ content-alignment }}">{{ article.content }}</div>
        </div>


    {% endcase %}

  {% endfor %}
</article>


