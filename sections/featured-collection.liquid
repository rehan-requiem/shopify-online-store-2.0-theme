<div class="flex flex-col items-center my-8 gap-3">
  <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4">
      {% for product in section.settings.featured_collection.products limit: 4 %}
        {% render 'product-card'
          , product: product %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Featured collection title"
      }, {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      }
    ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
  }
{% endschema %}