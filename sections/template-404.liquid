<div class="max-w-md flex flex-col gap-5 justify-center items-center">
  <div class="text-5xl font-bold">{{ section.settings.title }}</div>
  <div>
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext }}</p>
  </div>

  <a href="{{ section.settings.button_url }}" class="py-3 px-5 w-fit bg-gray-800 hover:bg-gray-900 text-white rounded-md">{{ section.settings.button_label }}</a>
</div>


{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "flex text-center justify-center items-center h-screen",
    "settings": [
      {
        "type": "text",

        "id": "title",
        "label": "Title",
        "default": "404 Not Found"
      }, {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "The page you are looking for does not exist."
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Go back",
        "label": "Button label"
      }, {
        "type": "url",
        "id": "button_url",
        "default": "/",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "404 Template"
      }
    ]
  }

{% endschema %}