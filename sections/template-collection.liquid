<div class="px-4 py-8">
    {% paginate collection.products by section.settings.number_of_products %}
        <h1 class="text-3xl text-center">{{ collection.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for product in collection.products %}
                    
                    <div class="w-full px-5 py-3">
                        <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                            <a href="{{ product.url }}">
                                {% if product.featured_image %}
                                    <div class="h-80 overflow-hidden">
                                <img class="w-full h-full object-cover {% if section.settings.zoom_on_hover %} transition duration-500 ease-in-out hover:scale-105 transform {% endif %}" src="{{ product.featured_image |  image_url: width: 350 }}" alt="{{ product.featured_image.alt }}">
                                    </div>
                                {% else %}
                                    {{ 'product-1' |  placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                                
                            {% endif %}
                            </a>
                            
                            <div class="flex flex-col p-4">
                                {% if section.settings.show_vendor %}
                                   <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                                {% endif %}
                               

                            <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>

                            <p class="text-gray-500">{{ product.price | money }}</p>
                            </div>
                            
                        </div>
                    </div>
                    
                    {% else %}
                        <p>No products found</p>
                {% endfor %}
            </div>
        </div>
        
        {% render 'pagination', snippet_paginate: paginate %}
    {% endpaginate %}
</div>


{% schema %}
{
    "name": "Colleciton",
    "settings": [
        {
          "type": "header",
          "content": "Layout"
        },
        {
            "type": "range",
            "id": "number_of_products",
            "min": 3,
            "max": 48,
            "step": 3,
            "default": 6,
            "label": "Number of products per page"
        },
        {
            "type": "checkbox",
            "id": "show_vendor",
            "label": "Show vendor",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "zoom_on_hover",
            "label": "Zoom image on hover",
            "default": false
        } 
    ]
}
{% endschema %}
